/ Button trigger modal
%button#modal-button.btn.btn-primary.btn-lg{ data: { "bs-target": "#test-modal", "bs-toggle": "modal" }, type: "button" }
  Launch demo modal
/ Modal
#test-modal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title Modal title
      .modal-body
        Modal Text!
      .modal-footer
        %button.btn.btn-default{"data-bs-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save changes
